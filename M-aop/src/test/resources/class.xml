<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	         http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="classService" class="org.mryan.context.aop.test.context.ClassService">
        <property name="className" value="ClassService"/>
    </bean>

    <bean class="org.mryan.context.aop.config.DefaultAdvisorAutoProxyCreator"/>

    <bean id="beforeAdvice" class="org.mryan.context.aop.test.advice.ClassServiceBeforeAdvice"/>

    <bean id="methodInterceptor"
          class="org.mryan.context.aop.MethodBeforeAdviceInterceptor">
        <property name="advice" ref="beforeAdvice"/>
    </bean>

    <bean id="pointcutAdvisor" class="org.mryan.context.aop.AspectJExpressionPointcutAdvisor">
        <property name="expression" value="execution(* org.mryan.context.aop.test.context.IClassService.*(..))"/>
        <property name="advice" ref="methodInterceptor"/>
    </bean>
</beans>